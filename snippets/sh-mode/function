${5:# ${6:Some comment here}
}function ${1:name}() {
    local -r usage="
Usage: \${FUNCNAME[0]}${2: ${3:description_of_arguments}}"

    if [[ \$# != ${4:allowed_number_of_arguments} ]]; then
        echo "$usage" >> /dev/stderr
        return 1
    fi

    $0
}